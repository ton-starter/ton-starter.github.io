{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    },
    "types": ["node", "vitest/globals", "happy-dom", "nuxt"],
    "skipLibCheck": true
  }
}
